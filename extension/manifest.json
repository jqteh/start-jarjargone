{
    "manifest_version": 2,
    "name": "Jargone",
    "description": "A web tool to empower patients",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "clipboardWrite",
        "storage",
        "contextMenus",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "ftp://*/*", "file:///*"],
            "js":["textselect.js"],
            "all_frames": true
        }
    ],
    "background": {
        "page": "background.html",
        "persistent": true
    }
}