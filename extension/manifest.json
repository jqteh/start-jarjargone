{
    "manifest_version": 2,
    "name": "Jargone",
    "description": "A web tool to empower patients",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png"
    },
    "permissions": [
        "clipboardWrite",
        "storage",
        "contextMenus"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "ftp://*/*", "file:///*"],
            "js":["jquery-3.6.0.js","content.js"],
            "css":["content.css"],
            "all_frames":true
        }
    ],
    "background": {
        "scripts": ["background.js"]
    }
}